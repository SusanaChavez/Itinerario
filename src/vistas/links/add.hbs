<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/links/add" method="POST">
                        <div class="input-group mb-3">
                            <input type="text" class="form-control" name="title" placeholder="Titulo Links" autofocus>
                        </div>
                        <div class="input-group mb-3">
                            <input type="url" class="form-control" name="url" placeholder="URL">
                        </div>
                        <div class="input-group mb-3">
                            <textarea name="descripcion" rows="2" class="form-control" placeholder="Comentarios"></textarea>
                        </div>
                        <div class="d-grid gap-2">
                            <button class="btn btn-success">Enviar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>